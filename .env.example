# Bittensor Subnet 90 - Miner Environment Configuration
# Copy this to .env and fill in your API keys

# =============================================================================
# BITTENSOR CONFIGURATION
# =============================================================================

# Wallet configuration
WALLET_NAME=my_wallet
HOTKEY_NAME=default

# Network configuration (testnet or mainnet)
NETWORK=testnet

# Brain API endpoint
API_URL=https://api.subnet90.com

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI API for AI reasoning
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_API=gpt-4o

# Alternative AI providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# DATA SOURCE APIS (same as brainstorm engine)
# =============================================================================

# Cryptocurrency Data
COINGECKO_API_KEY=your_coingecko_api_key_here

# Stock Market Data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Social Media Data
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here

# Search APIs
GOOGLE_CUSTOM_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# Commodities Data
METAL_PRICE_API_KEY=your_metal_price_api_key_here

# Sports Data
API_SPORTS_API_KEY=your_api_sports_key_here

# Economic Data
FRED_API_KEY=your_fred_api_key_here

# =============================================================================
# MINER STRATEGY CONFIGURATION
# =============================================================================

# Agent strategy: "brainstorm", "ai_reasoning", or "hybrid"
MINER_STRATEGY=hybrid

# Brainstorm engine URL (for direct API calls)
BRAINSTORM_URL=https://degenbrain-459147590380.us-central1.run.app

# Use mock miner for testing
USE_MOCK_MINER=false

# Request timeout in seconds
REQUEST_TIMEOUT=30

# =============================================================================
# OPTIONAL: PERFORMANCE TUNING
# =============================================================================

# Cache settings
DISABLE_CACHE=false

# Logging level
LOG_LEVEL=INFO